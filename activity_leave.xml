<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.itech.employeetracker.LeaveActivity">

        <TextView
            android:id="@+id/reasontxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the reason for leave"/>
        <EditText
            android:id="@+id/reasonEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/leavedatetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave date starting from"/>

        <EditText
            android:id="@+id/leavedateEdittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <TextView
            android:id="@+id/daystxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No of days"/>
        <EditText
            android:id="@+id/daysEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

<Button

    android:id="@+id/leavesubmitButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Submit"/>

</LinearLayout>
