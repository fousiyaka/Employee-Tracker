<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.itech.employeetracker.EditProfileActivity">
       <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit profile"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fnametxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/fnameEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lnametxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/lnameEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hometxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="House Name"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/homeEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/placetxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Place"
            android:textSize="15dp"/>

        <Spinner
            android:id="@+id/placeSpinner"
            android:layout_width="200dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/agetxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gendertxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/genderEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contacttxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/contactEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usernametxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/passwordtxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editButton"
            android:text="Edit"/>

    </LinearLayout>


</LinearLayout>
