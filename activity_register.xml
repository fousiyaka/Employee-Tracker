<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.itech.employeetracker.RegisterActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Details"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fnametxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/fnameEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lnametxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/lnameEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hometxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="House Name"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/homeEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



   <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statetxt"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="15dp"/>

            <Spinner
                android:id="@+id/stateSpinner"
                android:layout_width="200dp"
                android:layout_height="20dp" />
   </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/districttxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="District"
            android:textSize="15dp"/>

        <Spinner
            android:id="@+id/districtSpinner"
            android:layout_width="200dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


        <TextView
            android:id="@+id/placetxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Place"
            android:textSize="15dp"/>

        <Spinner
            android:id="@+id/placeSpinner"
            android:layout_width="200dp"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/agetxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gendertxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="15dp" />
        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MALE" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEMALE" />
        </RadioGroup>
    </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contacttxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/contactEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usernametxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/passwordtxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regButton"
            android:text="Next"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>


